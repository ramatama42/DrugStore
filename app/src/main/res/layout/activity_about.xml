<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BAB6B6"
    tools:context=".AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <TextView
                android:id="@+id/tv_kelompok"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="DRUGSTORE TEAM"
                android:layout_marginLeft="100dp"
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                android:fontFamily="casual"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_foto1"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/madon" />

                <TextView
                    android:id="@+id/tv_ramadhan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama  : Ramadhan Pratama"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/iv_foto1"
                    android:layout_marginLeft="100dp"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NPM   : 2024240080"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/tv_ramadhan"
                    android:textSize="18sp"
                    android:layout_marginLeft="100dp"/>
            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_foto2"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/rian" />

            <TextView
                android:id="@+id/tv_rian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama  : Rian Aji Febriansyah"
                android:layout_marginTop="10dp"
                android:layout_below="@id/iv_foto2"
                android:layout_marginLeft="100dp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NPM   : 2024240080"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_rian"
                android:textSize="18sp"
                android:layout_marginLeft="100dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_foto3"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/can" />

            <TextView
                android:id="@+id/tv_chandra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama  : Chandra Dinata"
                android:layout_marginTop="10dp"
                android:layout_below="@id/iv_foto3"
                android:layout_marginLeft="100dp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NPM   : 2024240080"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_chandra"
                android:textSize="18sp"
                android:layout_marginLeft="100dp"/>
        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>